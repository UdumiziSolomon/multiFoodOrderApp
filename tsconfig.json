{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "pages/*": ["src/pages/*"],
      "data/*": ["src/data/*"],
      "modules/*": ["src/modules/*"],
      "assets/*": ["assets/*"],
      "config/*": ["src/config/*"],
      "navigations/*": ["src/navigations/*"],
      "types/*": ["src/types/*"],
      "ui/*": ["src/ui/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "svgs/*": ["src/svgs/*"],
      "hooks/*": ["src/hooks/*"]
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}
